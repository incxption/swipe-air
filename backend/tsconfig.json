{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015", "es2017"],
        "allowJs": true,
        "checkJs": true,
        "outDir": "./build",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "listEmittedFiles": false
    },
    "include": ["src/"],
    "compileOnSave": true
}
